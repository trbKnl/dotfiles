# map the media keys
#
# Set the volume control keys
# @DEFAULT_SINK@ indicates my default sink, which has been set in
# /etc/pulse/default.pa, the default has been set to analog-stereo (internal speakers)
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym F2 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec ~/.config/volumeUp.sh
bindsym F3 exec ~/.config/volumeUp.sh
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle 
bindsym F1 exec pactl set-sink-mute @DEFAULT_SINK@ toggle 

# set the mute and F4 key to toggle play pause in spotify
bindsym XF86AudioMicMute exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym F4 exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86LaunchA exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

# set mod + equal to play the next song
bindsym $mod+equal exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

# set mod + - to play the next song
bindsym $mod+minus exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous


